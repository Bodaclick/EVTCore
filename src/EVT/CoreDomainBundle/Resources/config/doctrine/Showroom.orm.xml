<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="EVT\CoreDomainBundle\Entity\Showroom" table="showroom">
    <indexes>
      <index name="fk_showroom_vertical_idx" columns="vertical_id"/>
      <index name="fk_showroom_provider_idx" columns="provider_id"/>
      <index name="score_idx" columns="score"/>
    </indexes>
    <unique-constraints>
      <unique-constraint name="id_UNIQUE" columns="id"/>
    </unique-constraints>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="name" length="60" nullable="true"/>
    <field name="phone" type="string" column="phone" length="20" nullable="true"/>
    <field name="slug" type="string" column="slug" length="45" nullable="true"/>
    <field name="score" type="float" column="score" precision="10" scale="0" nullable="false"/>
    <many-to-one field="provider" target-entity="Provider">
      <join-columns>
        <join-column name="provider_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="vertical" target-entity="Vertical">
      <join-columns>
        <join-column name="vertical_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
