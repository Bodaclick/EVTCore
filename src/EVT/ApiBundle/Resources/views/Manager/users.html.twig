{% spaceless %}
{
    "items": [
        {% for user in users.getItems %}
        {
            "user": {
                "id": {{ user.id }},
                "username": "{{ user.username }}",
                "email": "{{ user.email }}",
                "name": "{{ user.personalInformation.name }}",
                "surnames": "{{ user.personalInformation.surnames }}",
                "phone": "{{ user.personalInformation.phone }}"
            }
        }
        {% if not loop.last %},{% endif %}
    {% endfor %}
    ],
    "pagination": {
        "total_pages": {{ users.getPagination.total_pages }},
        "current_page": {{ users.getPagination.current_page }},
        "items_per_page":{{ users.getPagination.items_per_page }},
        "total_items": {{ users.getPagination.total_items }}
    }
}
{% endspaceless %}